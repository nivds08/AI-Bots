# Copy this file to .env and fill in your actual API keys

# Generic API Keys - Configure based on your chosen services
# The server expects these generic environment variable names

# STT Service API Key - Set based on your chosen STT implementation
STT_API_KEY=your_stt_api_key_here

# LLM Service API Key - Set based on your chosen LLM implementation  
LLM_API_KEY=your_llm_api_key_here

# TTS Service API Key - Set based on your chosen TTS implementation
TTS_API_KEY=your_tts_api_key_here

# Specific service API keys (use as needed for your implementation)
# STT Options:
DEEPGRAM_API_KEY=your_deepgram_api_key_here         # https://console.deepgram.com/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here     # https://www.assemblyai.com/

# LLM Options:
OPENAI_API_KEY=your_openai_api_key_here             # https://platform.openai.com/api-keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here       # https://console.anthropic.com/
GOOGLE_API_KEY=your_google_api_key_here             # https://cloud.google.com/

# TTS Options:
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here     # https://elevenlabs.io/
AZURE_SPEECH_KEY=your_azure_speech_key_here         # https://azure.microsoft.com/
AZURE_SPEECH_REGION=your_azure_region

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO